{
    // Paths and plugin name are configured in settings.json
    "version": "2.0.0",
    "tasks": [
        {
            // A chain task - build the plugin, then copy it to your
            // jellyfin server's plugin directory
            "label": "build-and-copy",
            "dependsOrder": "sequence",
            "dependsOn": ["build", "make-plugin-dir", "copy-dll"]
        },
        {
            // Build the plugin
            "label": "build",
            "command": "dotnet",
            "type": "shell",
            "args": [
                "publish",
                "${workspaceFolder}/${config:pluginSolution}",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "group": "build",
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": "$msCompile"
        },
        {
            // Ensure the plugin directory exists before trying to use it
            "label": "make-plugin-dir",
            "type": "shell",
            "command": "mkdir",
            "args": [
                "-Force",
                "-Path",
                "${config:jellyfinDataDir}/plugins/${config:pluginInstallDirName}/"
            ]
        },
        {
            // Copy the plugin dll to the jellyfin plugin install path
            // Copies every file from the publish output (DLL + deps) to the plugin dir
            "label": "copy-dll",
            "type": "shell",
            "command": "cp",
            "args": [
                "./${config:pluginProjectDir}/bin/Debug/net8.0/publish/*",
                "${config:jellyfinDataDir}/plugins/${config:pluginInstallDirName}/"
            ]
        }
    ]
}
